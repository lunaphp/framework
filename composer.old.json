{
    "name": "lunaphp/framework",
    "type": "project",
    "description": "The Luna Framework.",
    "keywords": ["framework", "luna"],
	"license": "MIT",
    "homepage": "https://lunaphp.com",
    "support": {
        "issues": "https://github.com/lunaphp/framework/issues",
        "source": "https://github.com/lunaphp/framework"
    },
    "authors": [
        {
            "name": "Eduardo Fiorini",
            "email": "edupva@gmail.com"
        }
    ],
    "require": {
        "php": "^7.2",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-openssl": "*",
        "cycle/annotated": "^2.0",
        "cycle/migrations": "^1.0",
        "cycle/orm": "^1.1",
        "fightbulc/moment": "^1.30",
        "league/booboo": "^2.0",
        "league/climate": "^3.5",
        "league/flysystem": "^1.0",
        "league/fractal": "^0.18.0",
        "league/oauth2-client": "^2.4",
        "league/oauth2-server": "^8.0",
        "league/omnipay": "^3.0",
        "league/period": "^4.9",
        "monolog/monolog": "^2.0",
        "phpmailer/phpmailer": "^6.1",
        "ramsey/uuid": "^3.9",
        "respect/validation": "^1.1",
        "swiftmailer/swiftmailer": "^6.2",
        "twig/twig": "~3.0",
        "vlucas/phpdotenv": "~4.0",
        "wixel/gump": "^1.5"
    },
    "require-dev": {
        "filp/whoops": "^2.4"
    },
	"config": {
		"vendor-dir": "app/vendor",
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
	},
    "autoload": {
        "psr-4": {
            "App\\":"app/",
            "System\\":"system/"
        }
    }
}
